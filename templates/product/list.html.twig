{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
<h1>Product List</h1>
{% for product in products %}
  <div>
    <h2>{{ product.name }}</h2>
    <p>{{ dump(product) }}</p>
    {% if product.images %}
      <img src="{{ product.images[0].path }}" alt="">
    {% endif %}
  </div>
{% endfor %}
{% endblock %}
